<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mygoalskotlin">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyGoalsKotlin">
        <activity android:name="com.example.mygoalskotlin.ui.register.View.RegisterActivity" />
        <activity android:name="com.example.mygoalskotlin.ui.login.View.LoginActivity" />
        <activity
            android:name="com.example.mygoalskotlin.ui.splash.SplashActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.mygoalskotlin.ui.main.MainActivity" />
    </application>

</manifest>