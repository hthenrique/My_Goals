<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.MainActivity">

    <TextView
        android:id="@+id/welcomeUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Welcome!"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Position"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

    <TextView
        android:id="@+id/userPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="value"
        app:layout_constraintStart_toEndOf="@+id/position"
        app:layout_constraintTop_toTopOf="@+id/position" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/editPositionButton"
        android:layout_width="24dp"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:foreground="@drawable/ic_baseline_edit_24"
        android:foregroundGravity="center|fill"
        android:foregroundTint="@color/white"
        app:backgroundTint="@color/primaryColor"
        app:layout_constraintBottom_toBottomOf="@+id/userPosition"
        app:layout_constraintStart_toEndOf="@+id/userPosition"
        app:layout_constraintTop_toTopOf="@+id/userPosition" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/editPositionButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeUser">

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Position"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/editDoneButton"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:clickable="true"
            android:foreground="@drawable/ic_baseline_done_24"
            app:backgroundTint="@color/primaryColor"
            app:layout_constraintBottom_toBottomOf="@+id/editTextTextPersonName2"
            app:layout_constraintTop_toTopOf="@+id/editTextTextPersonName2"
            tools:layout_editor_absoluteX="213dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cancelEditButton"
            android:layout_width="58dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:foreground="@drawable/ic_baseline_close_24"
            app:backgroundTint="@color/design_default_color_error"
            app:layout_constraintBottom_toBottomOf="@+id/editDoneButton"
            app:layout_constraintStart_toEndOf="@+id/editDoneButton"
            app:layout_constraintTop_toTopOf="@+id/editDoneButton" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>